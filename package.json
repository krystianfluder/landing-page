{
  "name": "landing-page",
  "version": "1.0.0",
  "description": "Landing page made using: parcel, gsap 3, css, stripe. Google analytics and facebook pixel are attached to the website to provide the necessary measurements.",
  "main": "index.js",
  "scripts": {
    "start": "parcel serve src/pages/*.html",
    "build": "parcel build src/pages/*.html",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build-gh": "parcel build src/pages/*.html --public-url /landing-page",
    "predeploy": "npm run build-gh",
    "deploy": "gh-pages -d dist"
  },
  "author": "Krystian Fluder",
  "devDependencies": {
    "parcel": "^1.12.4",
    "sass": "^1.26.10"
  },
  "dependencies": {
    "@stripe/stripe-js": "^1.9.0",
    "gh-pages": "^3.1.0",
    "gsap": "^3.5.1"
  }
}
